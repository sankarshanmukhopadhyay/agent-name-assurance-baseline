{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ANAGB Conformance Declaration",
  "type": "object",
  "required": [
    "spec_version",
    "assurance_level",
    "implementation",
    "verification_tier",
    "conformance_profile",
    "controls",
    "declaration"
  ],
  "properties": {
    "spec_version": {
      "type": "string"
    },
    "implementation": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "organization": {
          "type": "string"
        },
        "jurisdiction": {
          "type": "string"
        },
        "deployment_environment": {
          "type": "string"
        },
        "public_endpoint": {
          "type": "string"
        }
      }
    },
    "verification_tier": {
      "type": "string",
      "enum": [
        "AN-0",
        "AN-1",
        "AN-2",
        "AN-3"
      ]
    },
    "conformance_profile": {
      "type": "string",
      "enum": [
        "Core",
        "Deploy",
        "Transact",
        "Enterprise"
      ]
    },
    "controls": {
      "type": "object",
      "description": "Map of ANAGB control IDs to implementation statements and evidence pointers.",
      "patternProperties": {
        "^ANAGB-[A-Z]+-[0-9]{2}$": {
          "type": "object",
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "type": "string",
              "enum": [
                "implemented",
                "not_implemented",
                "not_applicable"
              ]
            },
            "evidence": {
              "type": "string"
            },
            "notes": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "control_id",
          "justification"
        ],
        "properties": {
          "control_id": {
            "type": "string",
            "pattern": "^ANAGB-[A-Z]+-[0-9]{2}$"
          },
          "justification": {
            "type": "string"
          },
          "compensating_measures": {
            "type": "string"
          }
        }
      }
    },
    "declaration": {
      "type": "object",
      "required": [
        "authorized_signatory",
        "date"
      ],
      "properties": {
        "authorized_signatory": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "assurance_level": {
      "type": "string",
      "enum": [
        "AL1",
        "AL2",
        "AL3",
        "AL4"
      ],
      "description": "Assurance level maturity claim (see docs/assurance-levels.md)."
    },
    "evidence_bundle": {
      "type": "object",
      "required": [
        "type",
        "ref"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "path",
            "url"
          ],
          "description": "Where the evidence bundle can be retrieved."
        },
        "ref": {
          "type": "string",
          "description": "Path or URL to a bundle.json that conforms to evidence-bundles/evidence-bundle.schema.json."
        },
        "sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$",
          "description": "Optional hash of the bundle.json for immutability."
        }
      },
      "additionalProperties": false,
      "description": "Pointer to an evidence bundle index."
    },
    "standards_alignment": {
      "type": "array",
      "description": "Optional standards alignment declarations (non-normative).",
      "items": {
        "type": "object",
        "required": [
          "standard_id",
          "standard_name"
        ],
        "properties": {
          "standard_id": {
            "type": "string",
            "pattern": "^[A-Z0-9][A-Z0-9\\-]{2,64}$"
          },
          "standard_name": {
            "type": "string"
          },
          "standard_version": {
            "type": "string"
          },
          "crosswalk_ref": {
            "type": "string",
            "description": "Path to an in-repo machine-readable crosswalk file (YAML)."
          },
          "mapped_artifact_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9][a-z0-9\\-]{2,64}$"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "version": "0.2.1",
  "$id": "https://example.org/anagb/conformance-declaration.schema.json"
}
