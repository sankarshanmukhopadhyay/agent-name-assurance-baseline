{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/anagb/evidence-bundle.schema.json",
  "title": "ANAGB Evidence Bundle",
  "type": "object",
  "required": [
    "spec_version",
    "assurance_level",
    "implementation",
    "artifacts",
    "generated_at"
  ],
  "properties": {
    "spec_version": {
      "type": "string",
      "description": "ANAGB spec version this bundle targets."
    },
    "assurance_level": {
      "type": "string",
      "enum": [
        "AL1",
        "AL2",
        "AL3",
        "AL4"
      ]
    },
    "implementation": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "organization": {
          "type": "string"
        },
        "deployment_environment": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "review_window_days": {
      "type": "integer",
      "minimum": 1,
      "default": 90
    },
    "artifact_index_uri": {
      "type": "string",
      "description": "Optional stable URI where this bundle is published."
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "category",
          "required",
          "location"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9\\-]{2,64}$"
          },
          "category": {
            "type": "string",
            "enum": [
              "governance",
              "risk",
              "security",
              "privacy",
              "ai",
              "testing",
              "operations",
              "attestation",
              "other"
            ]
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "object",
            "required": [
              "type",
              "ref"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "path",
                  "url"
                ]
              },
              "ref": {
                "type": "string"
              },
              "sha256": {
                "type": "string",
                "pattern": "^[A-Fa-f0-9]{64}$"
              }
            },
            "additionalProperties": false
          },
          "freshness": {
            "type": "object",
            "properties": {
              "max_age_days": {
                "type": "integer",
                "minimum": 1
              },
              "last_updated": {
                "type": "string",
                "format": "date"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}